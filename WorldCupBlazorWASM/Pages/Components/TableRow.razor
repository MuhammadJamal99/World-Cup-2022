@code 
{
    [Parameter]
    public TeamTableDto Row { get; set; }
}
<li class="list-group-item">
    <div class="row">
        <div class="col-lg-4 d-flex align-items-center justify-content-center text-center" style="text-align: center;">
            <span class="flag">
                <img class="rounded-circle border border-2"
                     src="@Row.Team.Crest"
                     alt=""
                     style="width: 40px; height: 40px" />
            </span>
            <h5 style="margin:auto 4px">@Row.Team.Tla</h5>
        </div>
        <div class="col-lg-2 text-center">@Row.Won</div>
        <div class="col-lg-2 text-center">@Row.Draw</div>
        <div class="col-lg-2 text-center">@Row.Lost</div>
        <div class="col-lg-2 text-center"><b>@Row.Points</b></div>
    </div>
</li>
